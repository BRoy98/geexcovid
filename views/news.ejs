<!DOCTYPE html>
<html lang="en">

<%- include('header') -%>

<body>
    <%- include('fb-analytics') -%>
    <%- include('navbar') -%>

    <div class="container main">

        <div class="section mb-5">
            <div class="pg-title">
                <p class="paginator semibold">NEWS</p>
                <h4 class="mdi mdi-newspaper">
                    Latest Updates from different sources
                </h4>
            </div>
        </div>

        <div class="section mb-5">
            <!-- <div class="pg-title">
                <h4 class="mdi mdi-newspaper">
                    Latest Updates
                </h4>
            </div> -->
            <div class="news-sections">
                <div class="info slider">
                    <div class="row row-xs news-grid" id="grid">
                        <% for(var i=0; i < news_list.length; i++) { %>
                        <div class="col-sm-12 col-lg-6 mt-2 news-col">
                            <%- include('news-card-small', {news_data: news_list[i]}) -%>

                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="loading" id="loading">
                <span>
                    Loading
                </span>
                <div class="lds-ellipsis">
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>

        </div>

    </div>

    </div>
    <!-- /#page-content-wrapper IMPORTANT -->
    </div>
